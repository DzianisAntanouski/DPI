<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id="CreateAdvertisementTypeFragId" title="Create an advertisement type" afterClose="onAfterClose">
		<f:SimpleForm id="newAdvertisementTypeId" editable="true" layout="ResponsiveGridLayout">
			<f:content>
				<Label text="Advertisement Type Description" labelFor="Description"/>
				<Input id="AdvertisementTypeDescriptionId" required="true"/>
				<Label text="Advertisement Type Price" labelFor="Price"/>
				<Input id="AdvertisementTypePriceId"/>
			</f:content>
		</f:SimpleForm>
		<beginButton>
			<Button text="Save" press="onAddSave" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseAddDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>