<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Create an edition" afterClose="onAfterClose">
		<f:SimpleForm id="newEditionId" editable="true" layout="ResponsiveGridLayout">
			<f:content>
				<Label text="Edition Description" labelFor="Description"/>
				<Input id="editionDescriptionId" required="true"/>
			</f:content>
		</f:SimpleForm>
		<beginButton>
			<Button text="Save" press="_onEditionSave" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>