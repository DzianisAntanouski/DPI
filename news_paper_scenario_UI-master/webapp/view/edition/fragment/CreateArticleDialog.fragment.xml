<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id = "CreateArticleFragId" title="Create an article" afterClose="onAfterClose">
		<f:SimpleForm id="newArtilceId" editable="true" layout="ResponsiveGridLayout">
			<f:content>
				<Label text="Article Description" labelFor="Description"/>
				<Input id="aarticleDescriptionId" required="true"/>
				<Label text="Article Author" labelFor="Author"/>
				<Input id="aarticleAuthorId"/>
			</f:content>
		</f:SimpleForm>
		<beginButton>
			<Button text="Save" press="onAddSave" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseAddDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>