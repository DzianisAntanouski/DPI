<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id = "CreateOrderFragId" title="Create an order" afterClose="onAfterClose">
		<f:SimpleForm id="newOrderId" editable="true" layout="ResponsiveGridLayout">
			<f:content>
				<Label text="Order Description" labelFor="Description"/>
				<Input id="orderTitleId" required="true"/>
			</f:content>
		</f:SimpleForm>
		<beginButton>
			<Button text="Save" press="onAddSave" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseAddDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>